<html>
    <head>
        <title>The Todo App</title>
        <link rel="stylesheet" href="css/todo.css">
    </head>
    <body>
        <form action="/form" method="post">
            <div id="todo">
                
                    <h1>The Todo App</h1>
                    <span id="label1">Description</span>
                    
                        <input type="text" name="description" class="full" placeholder="What do you need to do?" required>
                        <span id="label2">Category</span>
                        <select name="category" id="half" required>
                            <option value="">Select An Category</option>
                            <option value="Personal">Personal</option>
                            <option value="Home">Home</option>
                            <option value="Office">Office</option>
                            <option value="Family">Family</option>
                            <option value="Friends">Friends</option>
                        </select>
                        <span id="label3">Due Date</span>
                        <input type="date" name="date" id="half" required>
                        

                        <span id="buttons">
                            <button type="submit" class="btn btn1">
                            <i class="fas fa-plus"></i> ADD TASKS
                            </button>

                            <a  href="" class="btn btn2">
                            <i class="far fa-trash-alt"></i> DELETE TASKS
                            </a>
                        </span>
                
        <!--  repeating div cards  -->
                <% for(i of cards) {%>
                <div class="cards">
                    <input type="checkbox" name="id" value="<%= i._id%>" class="part1">
                    <div class="part2">
                        <p class="p1"><%= i.description%></p>
                        <p class="p2"><i class="fas fa-calendar-times"></i><%= i.date %></p>
                    </div>
                    <div class="part3">
                        <p class="p3"><%= i.category%></p>
                    </div>

                </div>
                <% }%>
              

            </div>
        </form>

        <!-- linking font awesome jquery and local js file -->
        <script src="https://kit.fontawesome.com/8397dc2c85.js" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="./js/todo.js"></script>
    </body>
</html>